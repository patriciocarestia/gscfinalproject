@model List<GSC_FinalProject.Models.ThingViewModel>

@{
}

<div class="container mt-5">
  <div class="table-wrapper">
        <div class="table-title">
            <div class="row mb-4">
              <div class="col-sm-10 d-flex justify-content-between">
                  <h2 class="mb-0">Manage <b>Things</b></h2>
                    <a class="btn btn-success" asp-area="" asp-controller="Thing" asp-action="Add"><i class="uil uil-plus"></i> Add New Thing</a>
              </div>
            </div>
        </div>
        <div class="col-sm-10">
          <table class="table table-striped table-hover">
              <thead>
                  <tr>
                      <th>Description</th>
                      <th style="text-align: center">Category ID</th>
                      <th style="text-align: right">Actions</th>
                  </tr>
              </thead>
              <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td style="text-align: center">
                        @Html.DisplayFor(modelItem => item.CategoryId)
                    </td>
                    <td style="text-align: right">
                        <a asp-action="Details" asp-route-id="@item.Id"><i class="uil uil-eye h4"></i></a>
                        <a asp-action="Edit" asp-route-id="@item.Id"><i class="uil uil-edit h4 mx-1"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id"><i class="uil uil-trash h4"></i></a>
                    </td>
                </tr>
               }
              </tbody>
          </table>
        </div>
  </div>
</div>