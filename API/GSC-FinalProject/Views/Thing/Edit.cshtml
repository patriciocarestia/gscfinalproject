@model GSC_FinalProject.Models.ThingViewModel

@{
}

<div class="container mt-5 col-sm-8 ">
    <br />
    <div class="row">
      <div class="col">
            <h4 class="mb-1 text-center"><b>Edit Thing</b></h4>
      </div>
    </div>
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group my-3">
            <label asp-for="Description" class="control-label mb-2"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
            <label asp-for="CategoryId" class="control-label mb-2"></label>
                <select asp-for="CategoryId" asp-items="@ViewData["Categories"] as SelectList" class="form-control"></select>
            </div>

            <div class="text-center mt-4">
                <input type="submit" value="Save Thing" class="btn btn-primary" />
            </div>
        </form>
</div>
